<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.edu.reva.myapplication.MainActivity"
    tools:showIn="@layout/app_bar_main">
<Button
    android:id="@+id/TechEventButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Technical"
    android:onClick="gotoTech"
    android:textColor="#F5F5F5"
    android:background="@drawable/buttonstyle"
    android:layout_weight="1"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
     />
    <Button
        android:id="@+id/CultEventButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cultural"
        android:onClick="gotoCultural"
        android:textColor="#F5F5F5"
        android:layout_marginBottom="16dp"
        android:background="@drawable/buttonstyle"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/RecreationalEventButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recreational"
        android:onClick="gotoRecreational"
        android:textColor="#F5F5F5"
        android:background="@drawable/buttonstyle"
        android:layout_weight="1"
        />

</LinearLayout>
