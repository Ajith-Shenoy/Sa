<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback"
    android:orientation="vertical"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.edu.reva.myapplication.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/buttonstyle"
        android:onClick="catalogue"
        android:text="In-house"
        android:textColor="#EDE7F6"
        android:textStyle="bold" />

    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttonstyle"
        android:onClick="gotoTech"
        android:text="Others"
        android:textColor="#EDE7F6"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="115dp"
        android:text="@string/disclaimer"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="italic" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:onClick="webbutton"
        android:text="@string/click_here_to_go_to_website"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold"/>

</LinearLayout>
