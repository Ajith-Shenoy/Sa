<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/inhouse1">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/buttonstyle"
        android:textColor="#f5f5f5"
        android:onClick="gotoTechnical"
        android:padding="8dp"
        android:text="@string/technical" />

    <Button
        android:background="@drawable/buttonstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:onClick="gotoCultural"
        android:padding="8dp"
        android:textColor="#f5f5f5"
        android:text="@string/cultural" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:onClick="gotoRecreational"
        android:padding="8dp"
        android:background="@drawable/buttonstyle"
        android:textColor="#f5f5f5"
        android:text="@string/recreational" />
</LinearLayout>